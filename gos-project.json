{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "scm_id": {
        "type": "string"
      },
      "scm_name": {
        "type": "string"
      },
      "projects": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "folder_path": {
              "type": "string"
            },
            "tags": {
              "type": "object",
              "properties": {
                "r-infra-stage": {
                  "type": "string"
                },
                "r-costcenter": {
                  "type": "string"
                }
              },
              "required": ["r-infra-stage", "r-costcenter"]
            },
            "iacp": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "tfe_stage": {
                    "type": "string"
                  }
                },
                "required": ["name", "tfe_stage"]
              }
            }
          },
          "required": ["name", "folder_path", "tags"]
        }
      }
    },
    "required": ["scm_id", "scm_name", "projects"]
  }
  